<odoo>
    <data>

        <record id="account_sales_receivable_sale_order_view_form" model="ir.ui.view">
            <field name="name">Sale Receivable Report in Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_residual"
                        attrs="{'invisible': [('state', 'in', ['cancel','draft'])]}" />
                </xpath>
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name='residual_manual'/>
                    <field name="total_residual"
                        attrs="{'invisible': [('state', 'in', ['cancel','draft'])],'readonly': [('residual_manual','=', False)]}" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="sales_receivable" string="Comment Sale Receivable">
                        <field name="detail_sale_receivable"/>
                        <separator/>
                        <group><field name="uncollectible_account"/></group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="account_sales_receivable_sale_order_view_tree" model="ir.ui.view">
            <field name="name">Sale Receivable Report in Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_residual" />
                </xpath>
            </field>
        </record>

        <record id="ach_sales_receivable_tree" model="ir.ui.view">
            <field name="name">Sale Receivable</field>
            <field name="model">sale.order</field>
            <field name="priority">98</field>
            <field name="arch" type="xml">
                <tree string="Sale Receivable">
                    <field name="name" />
                    <field name="partner_invoice_id" />
                    <field name="confirmation_date" />
                    <field name="payment_term_id" />
                    <field name="amount_total" />
                    <field name="total_residual" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="search_ach_sales_receivable" model="ir.ui.view">
            <field name="name">Search Sale Receivable</field>
            <field name="model">sale.order</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search string="Search Sales Receivable">
                    <field name="name" string="Sale" filter_domain="[('name','ilike',self)]" />
                    <field name="partner_invoice_id" string="Customer"
                        filter_domain="[('partner_invoice_id','ilike',self)]" />
                    <filter string="My Sales Receivable"
                        domain="[('user_id','=',uid)]"
                        name="my_sale_receivable" />
                    <filter string="Residual"
                        domain="[('total_residual','!=',0)]"
                        name="sale_recidual" />
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_invoice_id" string="Customer"
                            context="{'group_by':'partner_invoice_id'}" />
                        <filter string="Salesperson" name="user_id"
                            context="{'group_by':'user_id'}" />
                        <filter name="status" string="Status" context="{'group_by':'state'}" />
                        <filter name="group_by_invoice_status" string="Invoice Status"
                            context="{'group_by':'invoice_status'}" />
                        <filter string="Confirmation Date" name="confirmation_date"
                            context="{'group_by':'confirmation_date'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="act_ach_sales_receivable" model="ir.actions.act_window">
            <field name="res_model">sale.order</field>
            <field name="name">Sale Receivable</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['&amp;',('state','in',['sale','done']),('amount_total','!=',0)]</field>
            <field name="view_id" ref="ach_sales_receivable_tree"></field>
            <field name="search_view_id" ref="search_ach_sales_receivable"></field>
            <field name="context">{'search_default_my_sale_receivable': 1,'search_default_user_id':
                1, 'search_default_group_by_invoice_status':1, 'search_default_confirmation_date':1}</field>
        </record>

        <!--<menuitem id="menu_sale_order_ach_sales_receivable"
            action="act_ach_sales_receivable"
            parent="sale.sale_order_menu"
            sequence="2" />-->
    </data>
</odoo>