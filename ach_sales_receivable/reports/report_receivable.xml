<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="receivable_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                     <div class="page">
                        <div class="oe_structure"/>
                        <h2 class="text-center">
                            Cuentas por Cobrar <span t-esc="o.seller_id.name"/>
                        </h2>
                        <h4 class="text-center">
                            Lugar: <span t-esc="o.seller_id.company_id.name"/>, Periodo: <span t-esc="o.date"/> al <span t-esc="o.date_start"/>
                        </h4>
                        <div class="row">
                            <table class="table table-sm table-bordered">
                                <t t-set="receivable" t-value="o.sale_receivable()"/>
                                <thead>
                                    <tr style="background-color: gray;">
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>No.</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Venta</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Fecha</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Cliente</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Terminos de Pago</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Monto Venta</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Factura</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Monto Factura</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Saldo</strong></th>
                                        <th style="font-size: 80%; color: black; vertical-align:middle; text-align:center"><strong>Nota</strong></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="count" t-value="0"/>
                                    <t t-set="total_residual" t-value="0"/>
                                    <tr t-foreach="receivable" t-as="line" style="height: 20px;">
                                        <t t-set="count" t-value="count+1"/>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="count"/>
                                        </td>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="line['sale_name']"/>
                                        </td>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="line['sale_date']"/>
                                        </td>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="line['partner']"/>
                                        </td>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="line['payment_term']"/>
                                        </td>
                                        <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="'{0:,.2f}'.format(line['sale_amount'])"/>
                                        </td>
                                        <td style="text-align:center; background-color:white; padding: 2px; margin: 0;">
                                            <p t-foreach="line['invoice_ids']" t-as="invoice" t-if="line['invoice_ids']" style="margin: 0;">
                                                <span t-esc="invoice['name']"/>
                                            </p>
                                        </td>
                                        <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                            <t t-set="invoice_amount_total" t-value="0"/>
                                            <p t-foreach="line['invoice_ids']" t-as="invoice" t-if="line['invoice_ids']" style="margin: 0;">
                                                <span t-esc="'{0:,.2f}'.format(invoice['amount'])"/>
                                                <t t-set="invoice_amount_total" t-value="invoice_amount_total+invoice['amount']"/>
                                            </p>
                                            <t t-if="len(line['invoice_ids']) &gt; 1"> 
                                                Total Facturado: <span t-esc="'{0:,.2f}'.format(invoice_amount_total)"/>
                                            </t>
                                        </td>
                                        <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="'{0:,.2f}'.format(line['residual'])"/>
                                            <t t-set="total_residual" t-value="total_residual+line['residual']"/>
                                        </td>
                                        <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                            <span t-esc="line['note']"/>
                                        </td>
                                    </tr>
                                </tbody>
                                <tfood>
                                    <td colspan="8" style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                        <strong>Total Saldo</strong>
                                    </td>
                                    <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                        <strong t-esc="'{0:,.2f}'.format(total_residual)"/>
                                    </td>
                                    <td style="text-align:right; background-color:white; padding: 2px; margin: 0;">
                                    </td>
                                </tfood>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>