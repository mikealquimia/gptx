<odoo>
  <data>
    
    <record model="ir.ui.view" id="sale_order_credit_auth_form">
      <field name="name">sale_order_credit_auth_form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="type">form</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="authorized_credit" groups="sale_credit_auth.group_credit_auth"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="payment_termn_credit_auth_form">
      <field name="name">payment_termn_credit_auth_form</field>
      <field name="model">account.payment.term</field>
      <field name="inherit_id" ref="account.view_payment_term_form" />
      <field name="type">form</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='name']" position="after">
          <field name="credit_payment"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>