<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
            id="id_payment_collection_report_pdf"
            model="payment.collection.report"
            string="Reporte de Cobros"
            report_type="qweb-pdf"
            name="charge_on_calls.payment_collection_report_pdf"
            file="charge_on_calls.payment_collection_report_pdf"
        />

    <template id="payment_collection_report_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>
                            Reporte de Cobros
                        </h2>
                        
                        <table class="table table-borderless" style="font-size: 9px !important;">
                            <thead>
                                <tr style="border: 1px solid #000">
                                    <th style="border-left: 1px solid #000">No.</th>
                                    <th style="border-left: 1px solid #000">Fecha</th>
                                    <th style="border-left: 1px solid #000">Factura</th>
                                    <th style="border-left: 1px solid #000">Cliente</th>
                                    <th style="border-left: 1px solid #000">Tel√©fono</th>
                                    <th style="border-left: 1px solid #000">Cobrado</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="count" t-value="0"/>
                                <tr t-foreach="o.calls" t-as="l" style=" border: 1px solid #000;line-height:0;">
                                    <t t-set="count" t-value="count+1"/>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="count"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="l.date"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="l.invoice_id"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="l.partner_id"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="l.phone"/>
                                    </td>
                                    <td style="border: 1px solid #000;">
                                        <span t-esc="l.residual"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
