<?xml version="1.0" encoding="utf-8"?>
<odoo>      
    <data>

        <template id="movimientos_caja_layout" inherit_id="web.report_layout">
            <xpath expr="//html" position="attributes">
                <attribute name="t-att-data-report-page-offset">data_report_page_offset</attribute>
            </xpath>
        </template>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="movimientos_caja">
            <field name="name">movimientos_caja.asistente_movimientos_caja</field>
            <field name="model">movimientos_caja.asistente_movimientos_caja</field>
            <field name="arch" type="xml">
                <form string="Seleccione la fecha">
                    <group>
                        <field name="name" invisible="1"/>
                        <field name="archivo" readonly="1" filename="name"/>
                    </group>
                    <group>
                        <group>
                            <field name="fecha_movimientos" tabindex="-1" />
                        </group>
                    </group>
                    <group>
                        <separator colspan="4" string="Diarios"/>
                        <field name="diarios_id" nolabel="1" domain="[('type','in',['sale','sale_refund'])]"/>
                    </group>
                    <footer>
                        <button name="print_report_excel" string="Generar Excel" type="object" class="oe_highlight"/>
                        <!-- <button name="print_report_excel" string="Reporte excel" type="object" class="oe_highlight"/>-->
                        <button special="cancel" string="Cancelar" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="window_movimientos_caja" name="Movimientos de caja" res_model="movimientos_caja.asistente_movimientos_caja" src_model="account.journal" view_mode="form" target="new"/>
        <menuitem action="window_movimientos_caja" id="menu_asistente_movimientos_caja" parent="account.menu_finance_reports"/>

    </data>
</odoo>